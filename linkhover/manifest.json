{
    "manifest_version": 3,
    "name": "Link Hover Scanner",
    "version": "2.0",
    "description": "Scans links on hover and shows safety level with 35 security checks",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["popup.css"],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}

